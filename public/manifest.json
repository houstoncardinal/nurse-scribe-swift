{
  "name": "NovaCare - Voice Documentation for Healthcare",
  "short_name": "NovaCare",
  "description": "AI-powered voice documentation for nurses and healthcare professionals. HIPAA-compliant, secure, and designed for modern healthcare workflows.",
  "version": "2.0.0",
  "manifest_version": 2,
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#30C2A0",
  "background_color": "#101A2B",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["healthcare", "productivity", "medical"],
  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "NovaCare Desktop Interface"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "NovaCare Mobile Interface"
    }
  ],
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Start New Note",
      "short_name": "New Note",
      "description": "Quickly start a new nursing note",
      "url": "/?action=new-note",
      "icons": [
        {
          "src": "/icons/shortcut-new-note.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Voice Dictation",
      "short_name": "Dictate",
      "description": "Start voice dictation immediately",
      "url": "/?action=dictate",
      "icons": [
        {
          "src": "/icons/shortcut-dictate.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics Dashboard",
      "short_name": "Analytics",
      "description": "View productivity analytics",
      "url": "/?action=analytics",
      "icons": [
        {
          "src": "/icons/shortcut-analytics.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Education Mode",
      "short_name": "Practice",
      "description": "Access education and practice cases",
      "url": "/?action=education",
      "icons": [
        {
          "src": "/icons/shortcut-education.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://nursescribe.ai/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+nursescribe",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/plain": [".txt"],
        "application/pdf": [".pdf"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["text/plain", "application/pdf", "application/json"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "offline_enabled": true,
  "features": [
    "voice-recognition",
    "offline-storage",
    "background-sync",
    "push-notifications"
  ]
}
